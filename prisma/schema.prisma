generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("HEROKU_POSTGRESQL_BROWN_URL")
}

model GrowthGroup {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  lat           Float
  lng           Float
  name          String
  whatsappLink  String
  addressInfo   String
  weekDay       String
  scheduledTime String
  leadership    String[] //Can relate to a user in the future
}

model Devotional {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  title     String
  body      String //Probably markdown in the future
  author    String //Can relate to a user in the future
}
