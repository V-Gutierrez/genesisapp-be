generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("HEROKU_POSTGRESQL_BROWN_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String       @id @default(cuid())
  name          String
  email         String
  password      String
  phone         String
  role          Role         @default(USER)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now())
  growthGroupId String?
  GrowthGroup   GrowthGroup? @relation(fields: [growthGroupId], references: [id])
  Devotional    Devotional[]
}

model GrowthGroup {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  lat           Float
  lng           Float
  name          String
  whatsappLink  String
  addressInfo   String
  weekDay       String
  scheduledTime String
  leadership    User[] //Can relate to a user in the future
}

model Devotional {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  title     String
  body      String //Probably markdown in the future
  author    User     @relation(fields: [userId], references: [id])
  userId    String
}
