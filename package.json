{
  "name": "backend",
  "version": "1.0.0",
  "description": "genesis church app backend",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "npm run prisma:migrate:deploy && npm run prisma:generate",
    "build:dev": "npx prisma generate && npx prisma migrate deploy",
    "build:webpack": "webpack --config webpack.config.js",
    "test": "jest",
    "prepare": "husky install",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:seed": "npx prisma db seed",
    "prisma:modify": "ts-node --transpile-only prisma/seeds/execute.ts",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "start": "node dist/index.js",
    "deploy": "git push heroku main"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^13.3.0",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^3.14.0",
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/date-fns": "^2.6.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.17.13",
    "@types/joi": "^13.0.8",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "16.11.34",
    "@types/ramda": "^0.28.12",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-loader": "^9.3.0",
    "ts-node": "10.7.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^4.0.0",
    "typescript": "4.6.4",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "."
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seeds/seed.ts"
  }
}
